<%= render "navbar", list: @list %>

<div class="banner">
  <div class="container">
    <h1>Movie Time</h1>
  </div>
</div>

<div class="container">

  <h2>Lists of movies</h2>

    <% @lists.each do |list| %>
        <div class="card-category">
          <%= link_to "#{list.name}", list_path(list) %>
        </div>
    <% end %>
  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-flat" %>

</div>
